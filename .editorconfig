# https://editorconfig.org
root = true

[*]
charset = utf-8
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_style = space
tab_width = 4
insert_final_newline = true
end_of_line = lf
max_line_length = 100

[*.sh]
indent_style = space
indent_size = 2
max_line_length = 80
binary_next_line = true
switch_case_indent = true

[Dockerfile]
indent_style = space
indent_size = 4
max_line_length = 80
